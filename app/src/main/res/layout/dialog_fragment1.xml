<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/ed_inputDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정눌러 설정하세요"
        android:layout_toRightOf="@id/tv_day"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/dayBtn"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/ed_inputDay"
        android:layout_toRightOf="@id/ed_inputDay"
        android:background="#00ff0000"
        android:text="설정"
        android:textColor="#000"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소 : "
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#000"
        android:layout_below="@id/tv_day"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/ed_inputplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/tv_day"
        android:layout_toRightOf="@id/tv_place"
        android:hint="지출한 장소를 입력하세요"
        android:textColor="#000"
        android:textStyle="bold"
        android:maxLines="1"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용한 금액 : "
        android:layout_below="@id/tv_place"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/ed_money"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_money"
        android:layout_below="@id/tv_place"
        android:hint="금액 입력해주세요"
        android:inputType="number"
        android:textSize="16dp"
        android:gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:layout_below="@id/ed_inputplace"
        android:layout_toRightOf="@id/ed_money"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <ImageView
        android:id="@+id/img_add"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/tv_money"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/imgadd"

        />


    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_money"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/img_add"
        android:src="@color/Account" />

    <ImageView
        android:id="@+id/sava"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_save"
        android:layout_below="@id/img"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_can"
        android:layout_below="@id/img"
        android:layout_toRightOf="@id/sava"
        android:layout_marginTop="10dp"
        />





</RelativeLayout>